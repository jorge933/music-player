{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@/*": ["./app/*"],
      "@assets/*": ["./assets/*"],
      "testUtils": ["./app/utils/testUtils.tsx"]
    },
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "jsx": "react-native"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "env.d.ts"
  ]
}
